
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script src="~/Scripts/Angular/MyDashboard.js"></script>

}

<div class="right_col" role="main" ng-controller="myDashboardCtrl">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>{{FirstName}}{{LastName}}</h3>
            </div>


        </div>

        <div class="clearfix"></div>

        <div class="row">


            <div class="col-md-6">
                <div class="row">

                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Weekly Statistics</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li>
                                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li class="dropdown">
                                    <a class="dropdown-toggle" role="button" aria-expanded="false" href="#" data-toggle="dropdown"><i class="fa fa-wrench"></i></a>
                                    <ul class="dropdown-menu" role="menu">
                                        <li>
                                            <a href="#">Settings 1</a>
                                        </li>
                                        <li>
                                            <a href="#">Settings 2</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">

                            <div class="col-md-6">
                                <div class="x_panel">
                                    <div class="x_content">
                                        <article class="media event">
                                            <div class="pull-left date" style="width:75px">
                                                <p class="month"># of tasks</p>
                                                <p class="day">{{TotalTasksNotStarted}}</p>
                                            </div>
                                            <div class="media-body">
                                                <a class="title" href="#" ng-click="TotalTasksFunction(TotalTasksNotStarted)"><h2>Total Tasks Not Started</h2></a>

                                            </div>
                                        </article>

                                        <article class="media event">
                                            <div class="pull-left date" style="width:75px">
                                                <p class="month"># of tasks</p>
                                                <p class="day">{{TotalTasksInProgress}}</p>
                                            </div>
                                            <div class="media-body">
                                                <a class="title" href="#"><h2>Total Tasks In Progress</h2></a>
                                            </div>
                                        </article>

                                        <article class="media event">
                                            <div class="pull-left date" style="width:75px">
                                                <p class="month"># of tasks</p>
                                                <p class="day">{{TotalTasksCompleted}}</p>
                                            </div>
                                            <div class="media-body">
                                                <a class="title" href="#"><h2>Total Tasks Completed</h2></a>
                                            </div>
                                        </article>


                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="x_panel">
                                    <div class="x_content">
                                        <canvas id="pieChart"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3" ng-controller="myRecentReleases">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Recent Releases</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" role="button" aria-expanded="false" href="#" data-toggle="dropdown"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content" ng-repeat="x in releaseItems" >
                        <article class="media event">
                            <div class="pull-left date" style="width:75px">
                                <p class="month"># of tasks</p>
                                <p class="day">{{ x.NoOfWorkItems}}</p>
                            </div>
                            <div class="media-body">
                                <a class="title" href="~/Release/Details?id={{ x.RELEASE_SEQ}}"><h2>{{ x.RELEASE_NBR}}</h2></a>
                            </div>
                        </article>


                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Recent Sprints</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" role="button" aria-expanded="false" href="#" data-toggle="dropdown"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <article class="media event">
                            <div class="pull-left date" style="width:75px">
                                <p class="month"># of tasks</p>
                                <p class="day">12</p>
                            </div>
                            <div class="media-body">
                                <a class="title" href="#"><h2>CAPS Release 31.5, Sprint 2</h2></a>
                            </div>
                        </article>

                        <article class="media event">
                            <div class="pull-left date" style="width:75px">
                                <p class="month"># of tasks</p>
                                <p class="day">15</p>
                            </div>
                            <div class="media-body">
                                <a class="title" href="#"><h2>CAPS Release 32.0, Sprint 1</h2></a>
                            </div>
                        </article>

                        <article class="media event">
                            <div class="pull-left date" style="width:75px">
                                <p class="month"># of tasks</p>
                                <p class="day">15</p>
                            </div>
                            <div class="media-body">
                                <a class="title" href="#"><h2>CAPS Release 33.0, Sprint 1</h2></a>
                            </div>
                        </article>


                    </div>
                </div>
            </div>
        </div>


        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Select a Task to Estimate</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a data-toggle="modal" data-target=".bs-addrelease2-modal-lg" role="button" aria-expanded="false"><i class="fa fa-plus"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    Search: <input type="text" ng-model="searchText" /> <input type="checkbox" ng-model="exactMatch" /> Exact Match
                    <div infinite-scroll="nextPage()" infinite-scroll-disabled="busy" infinite-scroll-distance="0">
                        <div class="x_content">
                            <table id="datatable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <td scope="col">Edit</td>
                                        <td scope="col">
                                            Select: <input type="checkbox" name="ctl00$page_viewport$grdWorkItems$ctl01$grdAssignAll" />
                                        </td>
                                        <td scope="col">Work Item Number</td>
                                        <td scope="col">Type</td>
                                        <td scope="col">Severity</td>
                                        <td scope="col">Description</td>
                                        <td scope="col">Total Hours</td>
                                        <td scope="col">Assignment Status</td>
                                        <td scope="col">Delete</td>


                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="release_gridrow" ng-repeat="x in TaskResults" repeat-end="">
                                        <td><a href="javascript:__doPostBack(&#39;ctl00$page_viewport$grdWorkItems&#39;,&#39;Edit$0&#39;)"><i class="fa fa-edit"></i></a></td>
                                        <td>
                                            <input id="page_viewport_grdWorkItems_chkAssignItem_0" type="checkbox" name="ctl00$page_viewport$grdWorkItems$ctl02$chkAssignItem" />
                                        </td>
                                        <td>
                                            <a id="page_viewport_grdWorkItems_lbtGoToWorkItem_0" href="javascript:__doPostBack(&#39;ctl00$page_viewport$grdWorkItems$ctl02$lbtGoToWorkItem&#39;,&#39;&#39;)">
                                            {{x.TFS_WI_ID}}</a>
                                        </td>
                                        <td align="center">
                                            <span id="page_viewport_grdWorkItems_lblWorkItemType_0">{{x.TYPE}}</span>
                                        </td>
                                        <td align="center">
                                            <span id="page_viewport_grdWorkItems_lblWorkItemSeverity_0">{{x.TFS_WI_SEVERITY}}</span>
                                        </td>
                                        <td>
                                            <span id="page_viewport_grdWorkItems_lblWorkItemDescription_0">{{x.TITLE}}</span>
                                        </td>
                                        <td align="center">
                                            <span id="page_viewport_grdWorkItems_lblWorkItemTotalHrs_0">{{x.TOTAL_HOURS}}</span>
                                        </td>
                                        <td align="center">
                                            <span id="page_viewport_grdWorkItems_lblWorkItemAssignment_0">{{x.STATUS_CDE}}</span>
                                        </td>
                                        <td>
                                            <a href="#">Delete</a>
                                        </td>
                                    </tr>



                                </tbody>
                            </table>

                        </div>
                    </div>

                </div>
            </div>
        </div>



    </div>
</div>
